<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ImageCropperServlet</servlet-name>
        <servlet-class>com.project3.web.ImageCropperServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>com.project3.web.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RotatedImage</servlet-name>
        <servlet-class>com.project3.web.RotatedImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageResizer</servlet-name>
        <servlet-class>com.project3.web.ImageResizer</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>ImageCropperServlet</servlet-name>
        <url-pattern>/ImageCropperServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/UploadServlet</url-pattern>
    </servlet-mapping>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            /usr/share/apache-tomcat-7.0.32/webapps/web/

        </param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>RotatedImage</servlet-name>
        <url-pattern>/RotatedImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageResizer</servlet-name>
        <url-pattern>/ImageResizer</url-pattern>
    </servlet-mapping>
    
    <servlet>
  <servlet-name>showImage</servlet-name>
  <servlet-class>com.cj.album.showImage</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>showImage</servlet-name>
  <url-pattern>/servlet/showImage</url-pattern>
</servlet-mapping> 
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>
